<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/intent1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="基本传递"
        android:gravity="center"
        android:background="#a2a2"/>


    <TextView
        android:id="@+id/intent2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="使用bundle"
        android:gravity="center"
        android:background="#d22"
        app:layout_constraintTop_toBottomOf="@+id/intent1"/>

    <TextView
        android:id="@+id/intent3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="使用Activity销毁时传递数据"
        android:gravity="center"
        android:background="#c1c"
        app:layout_constraintTop_toBottomOf="@+id/intent2"/>

    <TextView
        android:id="@+id/intent4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="使用序列化对象Seriazable"
        android:gravity="center"
        android:background="#c1c"
        app:layout_constraintTop_toBottomOf="@+id/intent3"/>




    <TextView
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""/>


    <TextView
        android:id="@+id/age"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginLeft="20dp"
        android:text=""/>
</android.support.constraint.ConstraintLayout>